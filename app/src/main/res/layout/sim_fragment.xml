<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <LinearLayout android:id="@+id/linearLayoutH1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:weightSum="1"
        >

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:editable="true"
            android:layout_weight="1"
            android:ems="10"
            android:id="@+id/display"
            android:layout_gravity="right" />
    </LinearLayout>


    <LinearLayout android:id="@+id/linearLayoutH2"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:layout_marginLeft="7dp">
        <Button
            android:id="@+id/bksp"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".225"
            android:textSize="30sp"
            android:text="Bksp" />
        <Button
            android:id="@+id/clear"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".49"
            android:textSize="30sp"
            android:text="C" />
        <Button
            android:id="@+id/plus_minus"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".225"
            android:textSize="30sp"
            android:text="+/-" />
    </LinearLayout>

    <LinearLayout android:id="@+id/linearLayoutH3"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:layout_marginLeft="7dp">
        <Button
            android:id="@+id/nine"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="7" />
        <Button
            android:id="@+id/eight"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="8" />
        <Button
            android:id="@+id/seven"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="9" />
        <Button
            android:id="@+id/division"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="/" />
    </LinearLayout>
        <LinearLayout android:id="@+id/linearLayoutH4"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_marginLeft="7dp">
            <Button
                android:id="@+id/four"
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:layout_weight=".235"
                android:textSize="30sp"
                android:text="4" />
            <Button
                android:id="@+id/five"
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:layout_weight=".235"
                android:textSize="30sp"
                android:text="5" />
            <Button
                android:id="@+id/six"
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:layout_weight=".235"
                android:textSize="30sp"
                android:text="6" />
            <Button
                android:id="@+id/multiplication"
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:layout_weight=".235"
                android:textSize="30sp"
                android:text="*" />
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayoutH5"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:layout_marginLeft="7dp">
        <Button
            android:id="@+id/one"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="1" />
        <Button
            android:id="@+id/two"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="2" />
        <Button
            android:id="@+id/three"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="3" />
        <Button
            android:id="@+id/subtraction"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="-" />
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayoutH6"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:layout_marginLeft="7dp">
        <Button
            android:id="@+id/zero"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="0" />
        <Button
            android:id="@+id/dot"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="." />
        <Button
            android:id="@+id/equal"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="=" />
        <Button
            android:id="@+id/addition"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_weight=".235"
            android:textSize="30sp"
            android:text="+" />
    </LinearLayout>
    </LinearLayout>